{
  "name": "rapidphoto",
  "version": "1.0.0",
  "description": "RapidPhoto monorepo",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "dev": "pnpm --filter \"./apps/*\" --parallel dev",
    "dev:web": "pnpm --filter @rapidphoto/web dev",
    "dev:api": "pnpm --filter @rapidphoto/api dev",
    "dev:mobile": "pnpm --filter @rapidphoto/mobile dev",
    "build": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" build",
    "test": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" test",
    "lint": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" lint"
  }
}
