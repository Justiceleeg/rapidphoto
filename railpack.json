{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": [
        "pnpm install"
      ]
    },
    "build": {
      "inputs": [
        {
          "step": "install"
        }
      ],
      "commands": [
        "pnpm --filter @rapidphoto/api-client build",
        "pnpm --filter @rapidphoto/web build"
      ]
    }
  },
  "deploy": {
    "inputs": [
      "...",
      {
        "step": "build",
        "include": ["."]
      }
    ],
    "startCommand": "pnpm --filter @rapidphoto/web start"
  }
}

